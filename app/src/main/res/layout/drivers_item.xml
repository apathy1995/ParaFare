<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardBackgroundColor="@color/grey"
    app:cardCornerRadius="18dp"
    app:contentPadding="5dp"
    android:foreground="?selectableItemBackground"
    android:background="@color/white"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/driversMainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/driversProfile"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_bg" />


            <TextView
                android:id="@+id/driversName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:text="Ernesto Macalimba"
                android:textColor="@color/black_"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/driver_bodynumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="30dp"
                android:text="Body Number: #1234"
                android:textColor="@color/black_"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/driversEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:text="ernestomacalimba@gmail.com"
                android:textColor="@color/black_"
                android:textSize="15sp" />

        <TextView
            android:id="@+id/driversPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="70dp"
            android:text="0919-132-9856"
            android:textColor="@color/black_"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>