<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardBackgroundColor="@color/grey"
    app:cardCornerRadius="18dp"
    app:contentPadding="5dp"
    android:foreground="?selectableItemBackground"
    android:background="@color/white"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/location"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/location_icon" />

        <TextView
            android:id="@+id/routesName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:text="Bolacan - Turo Hangga"
            android:textColor="@color/black_"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/routesDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:text="1km - 1 person"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

            <Button
                android:id="@+id/online_payment"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="55dp"
                android:textSize="15sp"
                app:cornerRadius="40dp"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/black_"
                android:drawableLeft="@drawable/baseline_payment_24_white"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/savedTrips_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="155dp"
                android:layout_marginTop="55dp"
                android:textSize="15sp"
                app:cornerRadius="40dp"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/black_"
                android:drawableLeft="@drawable/baseline_add_circle_outline_24"
                app:iconTint="@color/white" />

        <TextView
            android:id="@+id/routesPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="60dp"
            android:text="â‚±20.00"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>