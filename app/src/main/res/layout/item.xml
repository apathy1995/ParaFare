<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/grey">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">


    <ImageView
        android:id="@+id/location"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/location_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_gravity="center_horizontal">


        <TextView
            android:id="@+id/routesName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="60dp"
            android:text="Bolacan - Turo Hangga"
            android:textColor="@color/black_"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/routesDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="1km - 1 person"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/online_payment"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="60dp"
                android:textSize="15sp"
                app:cornerRadius="40dp"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/black_"
                android:drawableLeft="@drawable/baseline_payment_24_white"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/savedTrips_btn"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:textSize="15sp"
                app:cornerRadius="40dp"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/black_"
                android:drawableLeft="@drawable/baseline_add_circle_outline_24"
                app:iconTint="@color/white" />

        <TextView
            android:id="@+id/routesPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="â‚±20.00"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>